<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.assetuijavafx.fxml.controllers.AssetTypeDisplayOneController"
      prefHeight="400.0" prefWidth="600.0">

    <GridPane hgap="12.0" vgap="12.0" maxWidth="400">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35" prefWidth="100" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65" prefWidth="100" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="name" GridPane.rowIndex="0" />
            <Text fx:id="textName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="expectedLifeSpan" GridPane.rowIndex="1" />
            <Text fx:id="textExpectedLifeSpan" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="image" GridPane.rowIndex="2" />
            <Text fx:id="textImage" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="visible" GridPane.rowIndex="3" />
            <Text fx:id="textVisible" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="specificAssets" GridPane.rowIndex="4" />
            <Button fx:id="buttonSpecificAssets" text="Details" onAction="#redirectToSpecificAssets" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="buttonUpdate" text="Update" onAction="#updateAssetType" GridPane.rowIndex="5" />
            <Button fx:id="buttonDelete" text="Delete" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </children>
    </GridPane>
</VBox>
